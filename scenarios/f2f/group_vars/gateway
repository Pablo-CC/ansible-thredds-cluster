# -*-yaml-*-
tomcat_base: '/usr/local'

collections:
  - &collection1
    name: collection1
    path: collection1
    catalogs:
      src: catalogs/collection1
    services: [dodsC, fileServer, catalog]

  - &collection2
    name: collection2
    path: collection2
    catalogs:
      src: catalogs/collection2
    services: [dodsC, fileServer, catalog]

tds:
  - &tomcat
    name: tomcat
    tds_content_root: /esg/content

replicas:
  - gateway: esgf
    host: "{{ ansible_eth2.ipv4.address }}"
    route: "{{ ansible_nodename }}"
    port: 8223
    tds_instance: *tomcat
    collection: *collection1
