# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"



Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

 #Same SSH key for all VMs
 config.ssh.insert_key = false

 #Install net-tools on all VMs
 config.vm.provision "shell", inline: "yum install -y net-tools"

 config.vm.define "client" do |cl|
  cl.vm.hostname = "client"
  cl.vm.box = "centos/7"
  cl.vm.network "private_network", ip: "192.168.1.168"
 end

 config.vm.define "gateway" do |gw|
  gw.vm.hostname = "gateway"
  gw.vm.box = "centos/7"
  gw.vm.network "private_network", ip: "192.168.1.10"
  gw.vm.network "private_network", ip: "10.0.0.2"
 end

 config.vm.define "load-balancer" do |lb|
  lb.vm.hostname = "load-balancer"
  lb.vm.box = "centos/7"
  lb.vm.network "private_network", ip: "10.0.0.10"
 end

 
 config.vm.define "server1" do |s1|
  s1.vm.hostname = "server1"
  s1.vm.box = "centos/7"
  s1.vm.network "private_network", ip: "10.0.0.21"

  s1.vm.provision "shell", inline: "yum install -y unzip"
 end

 config.vm.define "server2" do |s2|
  s2.vm.hostname = "server2"
  s2.vm.box = "centos/7"
  s2.vm.network "private_network", ip: "10.0.0.22"
  s2.vm.provision "shell", inline: "yum install -y unzip"
  
  #By putting here the Ansible provision, the playbook will be run only once and on all hosts
  s2.vm.provision "ansible" do |ansible|
   ansible.playbook = "playbook.yml"
   ansible.limit = "all"
   ansible.vault_password_file = "pass.txt"
   ansible.version = "2.5.0"
   ansible.groups = {
   "servers" => ["server1", "server2"]
   }
  end
  
 end

end
