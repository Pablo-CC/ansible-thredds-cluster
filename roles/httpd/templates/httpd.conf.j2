# Configure modules
{% if httpd_version_major == '2.2' %}
Include {{ httpd_confd }}/*conf
{% elif  httpd_version_major == '2.4' %}
IncludeOptional {{ httpd_confd }}/*conf
{% endif %}


User daemon
Group daemon

ServerName localhost
ServerAdmin you@example.com


<Directory />
    {% if httpd_version_major == '2.2'%}
AllowOverride all
    {% elif  httpd_version_major == '2.4' %}
AllowOverride None
Require all denied 
    {% endif %}
</Directory>

DocumentRoot "{{ httpd_document_root }}"

<Directory "{{ httpd_document_root }}" >
    Options Indexes FollowSymLinks
    {% if httpd_version_major == '2.2'%}
AllowOverride all
    {% elif  httpd_version_major == '2.4' %}
AllowOverride None
    Require all granted
    {% endif %}
</Directory>

<IfModule dir_module>
    DirectoryIndex index.html
</IfModule>

<Files ".ht*">
    Require all denied
</Files>

ErrorLog "logs/error_log"

LogLevel warn

<IfModule log_config_module>
    LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
    LogFormat "%h %l %u %t \"%r\" %>s %b" common

    <IfModule logio_module>
      LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\" %I %O" combinedio
    </IfModule>

    CustomLog "logs/access_log" common
</IfModule>

<IfModule alias_module>
    ScriptAlias /cgi-bin/ "{{ httpd_server_www }}/cgi-bin/"
</IfModule>

<IfModule cgid_module>
</IfModule>

<Directory "{{ httpd_server_www }}/cgi-bin">
    AllowOverride None
    Options None
    Require all granted
</Directory>

<IfModule headers_module>
    RequestHeader unset Proxy early
</IfModule>


<IfModule mime_module>
    TypesConfig "{{ httpd_mime_types_dir }}"
    DefaultType text/html
    AddType application/x-compress .Z
    AddType application/x-gzip .gz .tgz
</IfModule>


ExtendedStatus On
<Location "/status-httpd">
    SetHandler server-status
    Allow from all
    AuthType Basic
    AuthName "Restricted Content"
    AuthUserFile {{ httpd_server_root }}/.htpasswd
    Require valid-user
</Location>
