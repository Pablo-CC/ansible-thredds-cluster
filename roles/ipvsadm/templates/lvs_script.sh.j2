#!{{ ansible_user_shell }}

#Clear possible previous rules
ipvsadm -C
#Add service on load-balancer's private interface
ipvsadm -A -t {{ ansible_eth1.ipv4.address }}:{{ bind_port  }} -s rr
#Save rules
ipvsadm -S -n > {{ ipvs_rulefile_path }}
